<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/descriptionCharacterImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/descriptionCharacterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/red_hat_display"
            android:text="hi"
            android:textColor="@color/hero_item_textColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/descriptionCharacterFilms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/hero_item_textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/descriptionCharacterShortFilms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/hero_item_textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/descriptionCharacterTvShows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/hero_item_textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/descriptionCharacterVideoGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/hero_item_textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/descriptionCharacterParkAttractions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/hero_item_textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/descriptionCharacterAllies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/hero_item_textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/descriptionCharacterEnemies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/hero_item_textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/descriptionCharacterURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/hero_item_textColor"
            android:textSize="18sp" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/backButton"
        style="@style/backButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/bt_allheroes"
        android:src="@drawable/ic_arrow" />

</FrameLayout>